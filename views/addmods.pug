extends layout

block content
  h1= title
  p Rows = #{query.rows} and Columns =  #{query.cols} 
    -
        rows = Number(query.rows) 
        col = Number(query.cols) 
    if !Number.isInteger(rows) 
        p Rows are not accurate 
    else if !Number.isInteger(col) 
        p Columns are not accurate 
    else if rows < 0 || rows > 10
        p Rows are in range of 1 - 10
    else if col < 0 || col >10
        p columns are in range of 1 -10
    else 
        table(id='table')
            - for(let i=0;i<rows;i++){
                tr 
                    - for(let j=i;j<col+i;j++){
                        td= j
                    -}
            -}